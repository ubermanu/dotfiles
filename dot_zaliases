#!/bin/bash

# Aliases

alias vim="helix" # helps to remove old habits
alias hx="helix"

# git
alias g='git'
alias ga='git add'
alias gaa='git add --all'
alias gc!='git commit -v --amend'
alias gc='git commit -v'
alias gca!='git commit -v -a --amend'
alias gca='git commit -v -a'
alias gd='git diff'
alias gds='git diff --staged'
alias gl='git pull'
alias gp='git push'
alias gpf!='git push --force'
alias gpt='git push --tag'
alias gst='git status'
alias gco='git checkout'
alias gcob='git cherkout -b'
alias grst='git reset'

# LS
alias l='ls -lh'
alias ll='ls -Alh'
alias ls='ls --color'

alias mv='mv -i'
alias cp='cp -i'
alias rm='rm -i'

